@using Microsoft.AspNetCore.Identity
@using eTrainingSolution.EntityFrameworkCore.Entities

@*quản lý việc đăng nhập*@
@inject SignInManager<UserInfo> SignInManger
@*quản lý user: thêm, sửa, xóa*@
@inject UserManager<UserInfo> UserManager 

<ul class="navbar-nav">
    @*asp-area="Identity" asp-page="/Account/Manage/Index" để thiết lập nó nằm ở trong thư mục Areas*@

    @*Kiểm tra xem user đã đăng nhập hay chưa*@
    @if (SignInManger.IsSignedIn(User))
    {
        <li class="nav-item">
            <a id="manage" class="nav-link text-black" asp-area="Identity" asp-controller="Manage" title="Manage" asp-action="Index">
                Xin chào <span class="text-danger">@UserManager.GetUserName(User)</span>
            </a>
        </li>
        <li class="nav-item">
           <form id="logoutForm" class="form-inline" asp-area="Identity" asp-controller="Account" asp-action="Logout" method="post">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Đăng xuất</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" id="register" asp-area="Identity" asp-controller="Account" asp-action="Register">Đăng ký</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-area="Identity" asp-controller="Account" asp-action="Login">Đăng nhập</a>
        </li>
    }
</ul>