@using Microsoft.AspNetCore.Identity;
@using eTrainingSolution.EntityFrameworkCore.Entities;
@using eTrainingSolution.WebApp.Areas.Identity.Models;

@model LoginModel
@inject SignInManager<User> SignInManager

@{
    ViewData["Title"] = "Đăng nhập";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-6">
        <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
            <h4>Cùng đăng nhập vào để xem những thú vị nhé !</h4>
            <div class="col-md-10">
                <hr>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LoginModel.Email" class="control-label"></label>
                <div class="col-md-10">
                    <input asp-for="LoginModel.Email" class="form-control" placeholder="Nhập Email"/>
                    <span asp-validation-for="LoginModel.Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="LoginModel.Password" class="control-label"></label>
                <div class="col-md-10">
                    <input asp-for="LoginModel.Password" class="form-control" placeholder="Nhập Password"/>
                    <span asp-validation-for="LoginModel.Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="LoginModel.Email" class="control-label"></label>
                <div class="col-md-10">
                    <button type="submit" class="btn btn-primary">Đăng nhập</button>
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <section>
            <h4>Đăng nhập bằng tài khoản</h4>
            <hr />
            @{
                var loginExternal = (await SignInManager.GetExternalAuthenticationSchemesAsync()).ToList();
                if (loginExternal.Count == 0)
                {
                    <div>
                        <p>
                            Ứng dụng chưa hỗ trợ đăng nhập từ tài khoản ngoài
                        </p>
                    </div>
                }
                else
                {
                    <form asp-controller="Account" asp-action="ExternalLogin" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                        <div>
                            <p>
                                @foreach (var provider in loginExternal)
                                {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.Name account">@provider.Name</button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}