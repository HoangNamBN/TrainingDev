@using eTrainingSolution.EntityFrameworkCore.Entities;

@model Faculty;

@{
    ViewData["Title"] = "Sửa thông tin";
}
<h1>Sửa thông tin</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-area="Identity" asp-controller="Faculty" asp-action="Edit">
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="FacultyName" class="control-label"></label>
                <input asp-for="FacultyName" name="FacultyName" class="form-control" />
                <span class="text-danger" asp-validation-for="FacultyName"></span>
            </div>
            <div class="form-group">
                <label asp-for="CapacityOfFaculty" class="control-label"></label>
                <input asp-for="CapacityOfFaculty" class="form-control" name="CapacityOfFaculty" />
                <span asp-validation-for="CapacityOfFaculty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreateDate" class="control-label"></label>
                <input asp-for="CreateDate" class="form-control" name="CreateDate" type="date" />
                <span asp-validation-for="CreateDate" class="text-danger"></span>
            <div class="form-group">
                <label asp-for="CreatedBy" class="control-label"></label>
                <input asp-for="CreatedBy" name="CreatedBy" class="form-control" />
                <span class="text-danger" asp-validation-for="CreatedBy"></span>
            </div>
            <div class="form-group">
                <label asp-for="SchoolID" class="control-label"></label>
                <select asp-for="SchoolID" class="form-control" asp-items="ViewBag.SchoolID"></select>
                <span class="text-danger" asp-validation-for="SchoolID"></span>
            </div>
            <p></p>
            <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-sm" value="Edit">Save</button>
                    <a asp-action="Index" class="btn btn-danger btn-sm">Quay lại</a>
            </div>
        </form>
    </div>
</div>