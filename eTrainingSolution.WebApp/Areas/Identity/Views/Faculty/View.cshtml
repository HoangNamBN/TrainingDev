@using eTrainingSolution.EntityFrameworkCore.Entities;

@model Faculty;

@{
    ViewData["Title"] = "Thông tin của Khoa";
}
<h1>Thông tin của Khoa</h1>

<table class="table table-bordered table-hover">
    <thead>
        <tr class="text-center text-white bg-black">
            <th>@Html.DisplayNameFor(model => model.FacultyName)</th>
            <th>@Html.DisplayNameFor(model => model.CapacityOfFaculty)</th>
            <th>@Html.DisplayNameFor(model => model.CreateDate)</th>
            <th>@Html.DisplayNameFor(model => model.CreatedBy)</th>
            <th>Trường</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Html.DisplayFor(model => model.FacultyName)</td>
            <td class="text-center">@Html.DisplayFor(model => model.CapacityOfFaculty)</td>
            <td class="text-center">@Html.DisplayFor(model => model.CreateDate)</td>
            <td>@Html.DisplayFor(model => model.CreatedBy)</td>
            <td>@Html.DisplayFor(model => model.Schools.SchoolName)</td>
        </tr>
    </tbody>
</table>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ID" class="btn btn-warning btn-sm">Sửa</a>
    <a asp-action="Index" class="btn btn-primary btn-sm">Quay lại</a>
</div>