@using eTrainingSolution.EntityFrameworkCore.Entities

@model IEnumerable<School>

@{
    ViewData["Title"] = "Danh sách trường học";
}
<h1>Danh sách trường học</h1>

<a class="btn btn-primary btn-sm" asp-action="Create">Thêm mới</a>
@{
    if (ViewBag.isAdmin != null)
    {
        <form asp-action="Index" method="get" class="form-inline">
            Nhập tên trường <input type="text" name="search" /> <button class="btn btn-sm btn-dark text-white">Tìm kiếm</button>
        </form>
    }
}
<p></p>

@{
    if(Model.Count() > 0)
    {
        int stt = 1;
        <table class="table table-bordered table-hover table-responsive">
            <thead>
                <tr class="text-center text-white bg-dark">
                    @*DisplayNamFor: sẽ hiển thị tên của thuộc tính*@
                    <th>Số thứ tự</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Address)</th>
                    <th>@Html.DisplayNameFor(model => model.CreateDate)</th>
                    <th>@Html.DisplayNameFor(model => model.Capacity)</th>
                    <th>Chức năng khác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">@(stt++)</td>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Address)</td>
                        <td class="text-center">@Html.DisplayFor(modelItem => item.CreateDate)</td>
                        <td class="text-center">@Html.DisplayFor(modelItem => item.Capacity)</td>
                        <td class="text-center">
                            <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.ID">Sửa</a>
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.ID">Xóa</a>
                            <a class="btn btn-info btn-sm" asp-action="View" asp-route-id="@item.ID">Xem</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else{
        <table class="table table-bordered table-hover table-responsive">
            <thead>
                <tr class="text-center text-white bg-dark">
                    @*DisplayNamFor: sẽ hiển thị tên của thuộc tính*@
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Address)</th>
                    <th>@Html.DisplayNameFor(model => model.CreateDate)</th>
                    <th>@Html.DisplayNameFor(model => model.Capacity)</th>
                </tr>
            </thead>
        </table>
    }
}