@using eTrainingSolution.EntityFrameworkCore.Entities;

@model Classroom;

@{
    ViewData["Tilte"] = "Sửa thông tin của lớp học";
}
<h1>Sửa thông tin của lớp học</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" asp-controller="Classes" asp-area="Identity">
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label class="control-label" asp-for="ClassName"></label>
                <input asp-for="ClassName" name="ClassName" class="form-control" />
                <span asp-validation-for="ClassName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="ClassCapacity"></label>
                <input asp-for="ClassCapacity" name="ClassCapacity" class="form-control" />
                <span asp-validation-for="ClassCapacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="CreateDate"></label>
                <input asp-for="CreateDate" name="CreateDate" class="form-control" type="date" />
                <span asp-validation-for="CreateDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="CreatedBy"></label>
                <input asp-for="CreatedBy" name="CreatedBy" class="form-control" />
                <span asp-validation-for="CreatedBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FacultyID" class="control-label"></label>
                <select asp-for="FacultyID" class="form-control" asp-items="ViewBag.FacultyID"></select>
                <span class="text-danger" asp-validation-for="FacultyID"></span>
            </div>
            <p></p>
            <div class="form-group">
                <button type="submit" class="btn btn-primary" value="Edit">Save</button>
                <a asp-action="Index" class="btn btn-danger">Quay lại</a>
            </div>
        </form>
    </div>
</div>