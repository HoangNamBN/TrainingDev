@using eTrainingSolution.WebApp.Areas.Identity.Models.Role
@model RoleModel;

@{
    ViewData["Title"] = "Thêm mới vai trò";
}
<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6">
        <form method="post" asp-area="Identity" asp-controller="Role" asp-action="Create">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" name="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-sm" value="Create">Thêm mới</button>
                <a class="btn btn-secondary btn-sm" asp-action="Index" asp-controller="Role">Quay lại</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}