@using Microsoft.AspNetCore.Identity;

@model List<IdentityRole>

<h2>Danh sách role</h2>

<div class="mb-2">
    <a class="btn btn-primary" asp-action="Create">Tạo mới</a>
    <a class="btn btn-info" asp-action="Index" asp-controller="User">Danh sách User đăng ký</a>
</div>

<table class="table table-active table-bordered">
    <tr class=" bg-black text-white text-center">
        <th> Vai trò </th>
        <th> Quyền sử dụng </th>
    </tr>
    @{
        if (Model != null)
        {
            @foreach (var role in Model)
            {
                <tr>
                    <td><p>@role.Name</p></td>
                    <td class="text-center">
                        <a class="btn btn-success btn-sm" asp-action="Edit" asp-route-id="@role.Id">Cập nhật</a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@role.Id">Xóa</a>
                    </td>
                </tr>
            }
        }
    }
</table>