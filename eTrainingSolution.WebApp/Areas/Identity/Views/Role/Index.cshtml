<h2>Danh sách các vai trò của người dùng</h2>

@*Cài đặt thông báo*@
<partial name="_StatusMessage" />

<div class="mb-2">
    <a class="btn btn-primary" asp-action="Create">Tạo mới</a>
    <a class="btn btn-secondary" asp-action="Index" asp-controller="User">Quản lý thành viên</a>
</div>

<table class="table table-active table-bordered">
    <tr class=" bg-info text-white text-center">
        <th> Vai trò </th>
        <th> Quyền sử dụng </th>
    </tr>
    @{
        if (@ViewBag.Roles != null)
        {
            @foreach (var role in @ViewBag.Roles)
            {
                <tr>
                    <td><p>@role.Name</p></td>
                    <td>
                        <a class="btn btn-success btn-sm" asp-action="Edit" asp-route-id="@role.Id">Cập nhật</a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@role.Id">Xóa</a>
                    </td>
                </tr>
            }
        }
    }
</table>